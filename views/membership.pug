extends layout 

block content 
  h1 Become a member 
  form(method='POST' action='')
    if errors
      ul.error-list 
        for error in errors 
          li #{error.msg}
    .form-group 
      label(for='password') Password: 
      input#password(type='password' name='membershipPassword' required='true')
    .form-end 
      button(type='submit') Submit